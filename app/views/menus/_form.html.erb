<%= form_with model: @menu, local: true do |f|%>
  <div class="field">
    <%= f.label :"商品名", "商品名" %><br />
    <%= f.text_field :name, id:"menu_name" %>
  </div>

  <div class="field">
    <%= f.label :"値段", "価格(半角数字のみでお願いします)" %><br />
    <%= f.text_area :price, class: :form__text, id:"menu_price" %>
  </div>

  <div class="field">
    <%= f.label :"商品説明", "商品の説明" %><br />
    <%= f.text_area :profile, class: :form__text, id:"menu_profile" %>
  </div>

  <div class="field">
    <%= f.label :"写真", "商品の写真" %><br />
    <%= f.file_field :image, id:"menu_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>